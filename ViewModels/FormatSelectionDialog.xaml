<Window x:Class="Decision_Trees_Visualizer.FormatSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decision_Trees_Visualizer"
        mc:Ignorable="d"
        Title="Select Format" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Select the format of the file:" Margin="0,0,0,10"/>
        <RadioButton Name="GraphvizOption" Content="Graphviz (.log)" IsChecked="True" Margin="0,5"/>
        <RadioButton Name="MLPDTOption" Content="MLPDT (.txt)" Margin="0,5"/>
        <RadioButton Name="JSONOption" Content="JSON (.json)" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
